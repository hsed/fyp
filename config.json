{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "BaselineHARModel",
        "args": {}
    },
    "data_loader": {
        "type": "JointsActionDataLoader",
        "args":{
            "data_dir": "datasets/hand_pose_action",
            "dataset_type": "train",
            "batch_size": 4,
            "shuffle": false,
            "validation_split": 0.01,
            "num_workers": 2,
            "debug": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "dtype": "float",
        "target_dtype": "long",

        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
